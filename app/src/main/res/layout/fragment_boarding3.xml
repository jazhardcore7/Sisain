<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landingpg3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="310dp"
            app:srcCompat="@drawable/onboarding3"
            android:contentDescription="@string/boarding3_description" /> />

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/itim_font_family"
            android:text="@string/title_on_boarding_third_slide"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <TextView
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans_regular"
            android:text="@string/description_on_boarding_third_slide"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/onboarding_rounded_button"
            android:fontFamily="@font/itim_font_family"
            android:text="@string/title_button_register"
            android:textAllCaps="false"
            android:textColor="@color/colorOnPrimary" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/title_button_login"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
