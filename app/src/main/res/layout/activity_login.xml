<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.views.auth.LoginActivity">


    <LinearLayout
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorOnPrimary"
        android:padding="16dp"
        android:gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_second_page"
            android:contentDescription="@string/illustration"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_sainers"
            android:textSize="24sp"
            android:textColor="#5D4037"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Sub Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serius_belum_ada_akun_ya_udah_nmari_kita_buat"
            android:textSize="14sp"
            android:textColor="#5D4037"
            android:gravity="center"
            android:layout_marginBottom="16dp" />



        <!-- Input Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/enter_your_email"
            android:drawableStart="@drawable/ic_mail"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textEmailAddress" />

        <!-- Input Password -->
        <EditText
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/masukkan_kata_sandi"
            android:drawableStart="@drawable/ic_pw"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword" />

        <!-- Tombol Login -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAllCaps="false"
            android:backgroundTint="#5D4037"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Link Sign In -->


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>