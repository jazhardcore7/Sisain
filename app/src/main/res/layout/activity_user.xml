<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbgprof"
    tools:context=".ui.ui.views.UserActivity">

    <LinearLayout
        android:id="@+id/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/colorOnPrimary">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@color/colorOnPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="@string/header_profile"
            android:textColor="#616161"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="98dp"
        android:layout_height="109dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="68dp"
        tools:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/full_name_john_doe"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        tools:layout_editor_absoluteY="76dp" />


    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_fullname"
        android:layout_marginStart="16dp"
        android:text="@string/email_john_doe_example_com"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        tools:layout_editor_absoluteY="118dp" />


    <LinearLayout
        android:background="@color/colorThird"
        android:id="@+id/about_us_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/user_email"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/rate_us_row">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingTop="20dp"
            android:text="@string/about_us"
            android:textColor="#1B5E20"
            android:textSize="16sp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="280dp"
            android:contentDescription="@string/about_us"
            android:src="@drawable/ic_rate"
            tools:ignore="RtlHardcoded" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_below="@id/user_email"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/about_us_row" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rate_us_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/about_us_row"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="49dp"
        android:background="@color/colorThird"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/about_us_row"
        app:layout_constraintTop_toBottomOf="@+id/user_email">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingTop="20dp"
            android:text="@string/rate_us"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/about_us"
            android:src="@drawable/ic_rate" />

    </LinearLayout>

    <!-- Log Out Row -->
    <LinearLayout
        android:background="@color/colorThird"
        android:id="@+id/logout_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/rate_us_row"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/about_us_row">

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/log_out"
            android:textSize="16sp" />

        <ImageView

            android:layout_width="24dp"
            android:layout_height="24dp"
           android:layout_marginTop="20dp"
            android:layout_marginLeft="290dp"
            android:contentDescription="@string/about_us"
            android:src="@drawable/ic_rate" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="240dp"
        android:text="@string/capstone"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logout_row" />


</androidx.constraintlayout.widget.ConstraintLayout>
